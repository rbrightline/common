{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ModelSchemaJson",
    "properties": {
        "name": {
            "$ref": "#/ModelNameSchemaJson"
        },
        "properties": {
            "type": "array",
            "items": {
                "$ref": "#/PropertySchemaJson"
            }
        }
    },
    "required": [
        "name"
    ],
    "definitions": {
        "ModelNameSchemaJson": {
            "enum": [
                "User",
                "Product"
            ]
        },
        "PropertySchemaJson": {
            "allOf": [
                {
                    "$ref": "#/CommonSchemaJson"
                },
                {
                    "$ref": "#/StringSchemaJson"
                }
            ]
        },
        "CommonSchemaJson": {
            "properties": {
                "name": {
                    "$ref": "#/PropertyNameSchemaJson"
                }
            },
            "required": [
                "name"
            ]
        },
        "StringSchemaJson": {
            "properties": {
                "type": {
                    "const": "string"
                },
                "minLength": {
                    "type": "integer",
                    "default": 3
                },
                "maxLength": {
                    "type": "integer",
                    "default": 100
                }
            }
        }
    }
}