{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Model",
    "properties": {
        "name": {
            "$ref": "#/definitions/ModelName"
        },
        "properties": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Property"
            }
        }
    },
    "required": [
        "name"
    ],
    "definitions": {
        "ModelName": {
            "enum": [
                "User",
                "Product"
            ]
        },
        "Property": {
            "allOf": [
                {
                    "$ref": "#/definitions/Common"
                },
                {
                    "$ref": "#/definitions/String"
                }
            ]
        },
        "Common": {
            "properties": {
                "name": {
                    "$ref": "#/definitions/PropertyName"
                }
            },
            "required": [
                "name"
            ]
        },
        "String": {
            "properties": {
                "type": {
                    "const": "string"
                },
                "minLength": {
                    "type": "integer",
                    "default": 3
                },
                "maxLength": {
                    "type": "integer",
                    "default": 100
                }
            }
        },
        "PropertyName": {
            "enum": [
                "username",
                "password"
            ]
        }
    }
}