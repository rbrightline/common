{
  "name": "@rline/crypto",
  "version": "8.4.0",
  "description": "Hashing, enciption, and decryption",
  "license": "MIT",
  "author": {
    "email": "robert.brightline@gmail.com",
    "name": "Robert Brightline",
    "url": "https://rbrightline.github.io"
  },
  "homepage": "https://rbrightline.github.io/rline/crypto",
  "repository": {
    "url": "https://github.com/rbrightline/common/tree/main/libs/crypto",
    "type": "github"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "rline",
    "library",
    "hash",
    "encryption",
    "decryption",
    "encrypt",
    "decrypt",
    "compare",
    "integrity",
    "security"
  ],
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "bcrypt": "^5.1.1"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "nx": {
    "sourceRoot": "libs/crypto/src",
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/crypto/dist",
          "main": "libs/crypto/src/index.ts",
          "tsConfig": "libs/crypto/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    },
    "name": "crypto"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2"
  }
}
