{
  "name": "@rline/validation",
  "version": "9.5.0",
  "description": "Property decorator for class validation",
  "author": {
    "email": "robert.brightline@gmail.com",
    "name": "Robert Brightline",
    "url": "https://rbrightline.github.io"
  },
  "homepage": "https://rbrightline.github.io/common/validation",
  "repository": {
    "url": "https://github.com/rbrightline/common/tree/main/libs/validation",
    "type": "github"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "rline",
    "library"
  ],
  "scripts": {
    "workspace:remove": "pnpm remove @rline/is @rline/type @rline/logger",
    "workspace:add": "pnpm add --workspace  @rline/is@latest @rline/type@latest @rline/logger@latest",
    "workspace": "pnpm workspace:remove && pnpm workspace:add"
  },
  "dependencies": {
    "@rline/is": "^9.5.0",
    "@rline/logger": "^9.5.0",
    "@rline/type": "^9.5.0",
    "@swc/helpers": "~0.5.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "nx": {
    "sourceRoot": "libs/validation/src",
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/validation/dist",
          "main": "libs/validation/src/index.ts",
          "tsConfig": "libs/validation/tsconfig.lib.json",
          "skipTypeCheck": false,
          "stripLeadingPaths": true
        }
      }
    },
    "name": "validation"
  }
}
